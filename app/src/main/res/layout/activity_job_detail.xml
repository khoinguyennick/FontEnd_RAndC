<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetailActivity">
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:layout_width="0dp"
            android:contentDescription="image profile"
            android:layout_margin="30dp"
            android:layout_height="@android:dimen/thumbnail_width"
            android:layout_weight="3"
            android:background="@drawable/man"/>
        <TextView android:layout_width="0dp"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Job Name"
            android:id="@+id/txtJobName"/>
    </TableRow>
    <!--job detail-->
    <TableRow>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/location_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TMA solution .Inc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icclock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20 hour ago"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </TableRow>
    <!--end job detail-->
    <!--salary and slot-->
    <TableRow>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dollar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20 000 000 VND"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_friend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5 slot"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </TableRow>
    <!--end of salary and slot-->
    <!--description-->
    <TableRow>
        <ImageView android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/diamond"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="2 years experience required"/>
    </TableRow>
    <!--phone-->
    <TableRow>
        <ImageView android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/phone"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="0123456789" />
    </TableRow>
    <!--email-->
    <TableRow>
        <ImageView android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/email"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="email: sdkke@gmailce.come" />
    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:text="apply"/>
        </RelativeLayout>
    </TableRow>
</TableLayout>