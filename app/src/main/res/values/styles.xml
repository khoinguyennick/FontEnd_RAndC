<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorError">@color/colorError</item>

        <item name="buttonStyle">@style/AppTheme.Button.Primary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="Widget.AppCompat.Button.Colored"/>
    <style name="Button.Error" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorError</item>
    </style>

</resources>
