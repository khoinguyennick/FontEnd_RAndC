<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView android:layout_width="0dp"
            android:contentDescription="image profile"
            android:layout_margin="30dp"
            android:layout_height="120dp"
            android:layout_weight="3"
            android:id="@+id/imgCompany"/>
        <TextView android:layout_width="0dp"
            android:layout_marginTop="60dp"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Job Name"
            android:id="@+id/txtJD_JobName"/>
    </TableRow>
    <!--job detail-->
    <TableRow android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/location_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TMA solution .Inc"
                android:id="@+id/txtJD_CompanyName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icclock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20 hour ago"
                android:id="@+id/txtJD_Time"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </TableRow>
    <!--end job detail-->
    <!--salary and slot-->
    <TableRow android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dollar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20 000 000 VND"
                android:id="@+id/txtJD_Salary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_friend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5 slot"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txtJD_Quantity"/>
        </LinearLayout>
    </TableRow>
    <!--end of salary and slot-->
    <!--description-->
    <TableRow android:layout_marginTop="10dp">
        <ImageView android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/diamond"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="2 years experience required"
            android:id="@+id/txtJD_Required"/>
    </TableRow>
    <!--phone-->
    <TableRow android:layout_marginTop="10dp">
        <ImageView android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/phone"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="0123456789"
            android:id="@+id/txtJD_CompanyPhone"/>
    </TableRow>
    <!--email-->
    <TableRow android:layout_marginTop="10dp">
        <ImageView android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/email"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="email: sdkke@gmailce.come"
            android:id="@+id/txtJD_CompanyEmail"/>
    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:text="apply"
                android:id="@+id/btnApply"/>
        </RelativeLayout>
    </TableRow>
</TableLayout>